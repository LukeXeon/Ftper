<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="configItem"
            type="org.kexie.android.ftper.viewmodel.bean.ConfigItem"/>
    </data>

    <FrameLayout
        android:layout_marginTop="-15dp"
        android:layout_marginBottom="-15dp"
        android:clipChildren="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:singleLine="true"
                        android:layout_weight="1"
                        android:text='@{configItem.name==null?("未命名服务器-"+configItem.workerId):configItem.name}'
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="left|center"
                        android:hint="@string/app_name"
                        android:textColor="@color/colorBlackAlpha54"
                        android:textColorHint="@color/colorBlackAlpha54"
                        android:textSize="25dp"/>
                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:theme="@style/TheCheckBox"
                        android:clickable="false"
                        android:workerId="@+workerId/check"
                        android:checked="@{configItem.select}"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"/>
                </LinearLayout>

                <TextView
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:hint="@string/app_name"
                    android:text='@{"Host："+configItem.host}'
                    android:textColor="@color/colorBlackAlpha54"
                    android:textColorHint="@color/colorBlackAlpha54"
                    android:textSize="15dp"/>

                <TextView
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:hint="@string/app_name"
                    android:text='@{"Port："+configItem.port}'
                    android:textColor="@color/colorBlackAlpha54"
                    android:textColorHint="@color/colorBlackAlpha54"
                    android:textSize="15dp"/>

                <TextView
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:hint="@string/app_name"
                    android:text='@{"用户名："+configItem.username}'
                    android:textColor="@color/colorBlackAlpha54"
                    android:textColorHint="@color/colorBlackAlpha54"
                    android:textSize="15dp"/>

                <TextView
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:hint="@string/app_name"
                    android:text='@{"最后更新："+configItem.date}'
                    android:textColor="@color/colorBlackAlpha54"
                    android:textColorHint="@color/colorBlackAlpha54"
                    android:textSize="15dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </FrameLayout>
</layout>